{
    "manifest_version": 3,
    "name": "Truth-Tides",
    "version": "1.0.0",
    "description": "Mitigating financial bias one tide at a time",
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "permissions": ["activeTab", "tabs", "scripting", "sidePanel", "webNavigation"],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
}